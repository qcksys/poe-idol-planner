{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"type": "object",
	"properties": {
		"id": {
			"type": "string"
		},
		"type": {
			"type": "string",
			"enum": ["prefix", "suffix"]
		},
		"name": {
			"type": "object",
			"propertyNames": {
				"type": "string",
				"enum": [
					"en",
					"zh-TW",
					"zh-CN",
					"ko",
					"ja",
					"ru",
					"pt-BR",
					"de",
					"fr",
					"es"
				]
			},
			"additionalProperties": {
				"type": "string"
			},
			"required": [
				"en",
				"zh-TW",
				"zh-CN",
				"ko",
				"ja",
				"ru",
				"pt-BR",
				"de",
				"fr",
				"es"
			]
		},
		"tiers": {
			"type": "array",
			"items": {
				"type": "object",
				"properties": {
					"tier": {
						"type": "integer",
						"minimum": 1,
						"maximum": 10
					},
					"levelReq": {
						"type": "integer",
						"minimum": 0,
						"maximum": 9007199254740991
					},
					"text": {
						"type": "object",
						"propertyNames": {
							"type": "string",
							"enum": [
								"en",
								"zh-TW",
								"zh-CN",
								"ko",
								"ja",
								"ru",
								"pt-BR",
								"de",
								"fr",
								"es"
							]
						},
						"additionalProperties": {
							"type": "string"
						},
						"required": [
							"en",
							"zh-TW",
							"zh-CN",
							"ko",
							"ja",
							"ru",
							"pt-BR",
							"de",
							"fr",
							"es"
						]
					},
					"values": {
						"type": "array",
						"items": {
							"type": "object",
							"properties": {
								"min": {
									"type": "number"
								},
								"max": {
									"type": "number"
								}
							},
							"required": ["min", "max"],
							"additionalProperties": false
						}
					},
					"weight": {
						"type": "integer",
						"minimum": 0,
						"maximum": 9007199254740991
					}
				},
				"required": ["tier", "levelReq", "text", "values", "weight"],
				"additionalProperties": false
			}
		},
		"mechanic": {
			"type": "string"
		},
		"applicableIdols": {
			"type": "array",
			"items": {
				"type": "string",
				"enum": [
					"Minor",
					"Kamasan",
					"Totemic",
					"Noble",
					"Burial",
					"Conqueror"
				]
			}
		}
	},
	"required": ["id", "type", "name", "tiers", "mechanic", "applicableIdols"],
	"additionalProperties": false
}
