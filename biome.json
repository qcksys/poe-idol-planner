{
	"$schema": "https://biomejs.dev/schemas/2.3.12/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"useSortedClasses": "warn"
			},
			"correctness": {
				"noUnusedImports": "warn"
			},
			"a11y": {
				"useKeyWithClickEvents": "off",
				"useKeyWithMouseEvents": "off"
			},
			"suspicious": {
				"noArrayIndexKey": "off"
			}
		}
	},
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4
	},
	"files": {
		"includes": [
			"**/*",
			"!app/generated",
			"!worker-configuration.d.ts",
			"!code-quality.json",
			"!scripts/**/.cache"
		],
		"maxSize": 1048576
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	}
}
