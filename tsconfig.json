{
	"include": [
		".react-router/types/**/*",
		"app/**/*",
		"app/**/.server/**/*",
		"app/**/.client/**/*",
		"workers/**/*",
		"test/**/*",
		"*"
	],
	"compilerOptions": {
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"noEmit": true,
		"composite": true,
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"allowImportingTsExtensions": true,
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"types": ["vite/client"],
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"baseUrl": ".",
		"rootDirs": [".", "./.react-router/types"],
		"paths": {
			"~/*": ["./app/*"],
			"~test/*": ["./test/*"]
		}
	}
}
